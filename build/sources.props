<Project>
    <PropertyGroup>
        <RestoreSources>
            https://api.nuget.org/v3/index.json
        </RestoreSources>
    </PropertyGroup>

    <PropertyGroup Condition="'$(DOTNET_RESTORE_OFFLINE)' == 'true' OR '$(DOTNET_RESTORE_OFFLINE)' == '1'">
        <!-- DOTNET_RESTORE_OFFLINE is an arbitrary name for the EnvVar, it's not supported by any Microsoft team -->
        <RestoreSources>
            C:\Users\$(USERNAME)\.nuget\packages;
        </RestoreSources>
    </PropertyGroup>

